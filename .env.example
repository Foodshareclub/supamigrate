# Supamigrate Environment Variables
# Copy to .env and fill in your values

# Default source project (optional, can use --from flag instead)
SUPAMIGRATE_SOURCE=production

# Default target project (optional, can use --to flag instead)
SUPAMIGRATE_TARGET=staging

# Config file path (optional, defaults to ./supamigrate.toml)
SUPAMIGRATE_CONFIG=./supamigrate.toml

# For CI/CD: Individual project credentials
# These override config file settings

# Production project
PROD_PROJECT_REF=your-prod-project-ref
PROD_DB_PASSWORD=your-prod-db-password
PROD_SERVICE_KEY=your-prod-service-role-key

# Staging project
STAGING_PROJECT_REF=your-staging-project-ref
STAGING_DB_PASSWORD=your-staging-db-password
STAGING_SERVICE_KEY=your-staging-service-role-key
